<div class="w-full border rounded-lg shadow background-primary border-color-primary">
  <div class="p-6 space-y-4">
    <h1 class="text-xl font-bold leading-tight tracking-tight">
      Sign in to your account
    </h1>
    <%= form_with url: session_url, class: "space-y-4" do |form| %>
      <div>
        <label class="block mb-2 text-sm font-medium">Email:</label>
        <%= form.email_field :email, required: true, class: "input-primary" %>
      </div>

      <div>
        <label class="block mb-2 text-sm font-mediu ">Password:</label>
        <%= form.password_field :password, required: true, class: "input-primary" %>
      </div>
      <%= form.button "Sign In", class: "w-full font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-primary-600 hover:bg-primary-700 focus:ring-primary-800" %>
    <% end %>
  </div>
</div>
