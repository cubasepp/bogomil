<div class="w-full border rounded-lg shadow bg-gray-800 border-gray-700">
	<div class="p-6 space-y-4">

	<h1 class="text-xl font-bold leading-tight tracking-tight dark:text-white">
		Sign in to your account
	</h1>
	<%= render "shared/flash_message" %>
	<%= form_with url: session_url, class: "space-y-4" do |form| %>
		<div>
			<label class="block mb-2 text-sm font-medium text-white">Email:</label>
			<%= form.email_field :email, required: true, class: "border rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" %>
		</div>

		<div>
			<label class="block mb-2 text-sm font-medium text-white">Password:</label>
			<%= form.password_field :password, required: true, class: "border rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" %>
		</div>
		<%= form.button "Sign In", class: "w-full font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-primary-600 hover:bg-primary-700 focus:ring-primary-800" %>
	<% end %>
	</div>
</div>