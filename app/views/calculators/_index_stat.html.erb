<%# locals: (title: "", frame_id: "") -%>

<div class="stat bg-base-100">
  <div class="stat-figure text-accent-content">
    <%= icon(:hashtag, css: "inline-block size-8 stroke-current") %>
  </div>
  <div class="stat-title">
    <%= title %>
  </div>
  <div class="stat-value text-accent-content">
    <%= turbo_frame_tag frame_id, data: { calculator_target: frame_id.camelcase(:lower) } do %>
      __
    <% end %>
  </div>
  <div class="stat-desc text-accent-content pt-2">
    &nbsp;
  </div>
</div>
