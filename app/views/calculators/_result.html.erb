<div class="stat w-60" id="calculate">
  <div class="stat-figure text-secondary">
    <%= icon(:percent_badge, css: "inline-block size-8 stroke-current") %>
  </div>
  <div class="stat-title">
    <%= I18n.t("calculator.label.percent") %>
  </div>
  <div class="stat-value text-primary">
    <%= local_assigns[:percent] || "__" %>
  </div>
  <div class="stat-desc text-secondary pt-2">
    <% points = local_assigns[:percentage_points] %>
    <span class="inline-block w-10 mr-2">
      <% if points&.positive? %>
        ↗︎
        <%= points %>
      <% elsif points&.negative? %>
        ↘︎
        <%= points %><% else %>
        ____
      <% end %>
    </span>
    <%= I18n.t("calculator.label.percentage_points") %>
  </div>
</div>
