<div class="sticky top-0 mb-4 z-30" id="header">
  <!-- Navbar -->
  <nav class="navbar w-full bg-base-300">
    <div class="flex-1">
      <label
        for="main-drawer"
        aria-label="open sidebar"
        class="btn btn-square btn-ghost drawer-button lg:hidden "
        <!-- Sidebar toggle icon -->
        <%= icon(:bars_3, css: "size-6") %>
      </label>
      <%= t(:"app.title") %>
    </div>
    <div class="flex-none">
      <!-- Toggle --!>
      <div class="avatar placeholder w-10 h-10">
        <label class="swap swap-rotate">
          <input
            data-action="click->ui#toggleDarkMode"
            type="checkbox"
            class="hidden"
            value="on"
          />
          <%= icon(:sun, css: "swap-on size-6") %>
          <%= icon(:moon, css: "swap-off size-6") %>
        </label>
      </div>
      <!-- Toggle End --!>

      <!-- Menu --!>
      <% if signed_in? %>
        <div class="dropdown dropdown-end">
          <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
            <div
                class="bg-neutral text-neutral-content w-10 h-10 rounded-full grid place-content-center"
            >
              <span class="text-xl leading-none">MV</span>
            </div>
          </div>
          <ul
              tabindex="-1"
              class="menu menu-sm dropdown-content bg-base-100 rounded-box z-1 mt-3 w-52 p-2 shadow"
              >
            <li>
              <%= link_to t("button.session.destroy"),
              session_path,
              method: :delete,
              data: {
                turbo_method: :delete,
              },
              class: "justify-between btn btn-sm btn-primary w-full" %>
            </li>
          </ul>

        </div>
      <% end %>
      <!-- Menu End --!>
    </div>
  </nav>
</div>
