<% flash.each do |type, msg| %>
  <div class="p-4 mb-4 text-sm rounded-lg border max-w-screen-xl mx-auto
    <% case type when "alert" %> border-red-400 bg-red-950 text-red-400
    <% when "notice" %> border-gree-400 bg-green-950 text-green-400
    <% end %>" role="<%= type %>">
    <%= msg %>
    <%= type.class %>
    <%= type %>

  </div>
<% end %>
