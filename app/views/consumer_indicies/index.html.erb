<%= turbo_frame_tag :consumer_indicies do %>
  <div data-controller="consumer-indicies" class="grid grid-rows-1 grid-cols-1 md:grid-rows-2 md:grid-cols-2 gap-1">
    <div class="md:row-span-2">
      <div class="box-default min-w-96 h-full">
        <%= render partial: "selection", locals: {
          grouped_consumer_indicies: @grouped_consumer_indicies, frame_ids: @frame_ids
        } %>
      </div>
    </div>
    <div class="md:row-span-2">
      <div class="box-default min-w-96 flex h-full items-center justify-center">
        <%= render partial: "calculator", locals: {
          frame_ids: @frame_ids
        } %>
      </div>
    </div>
    <div class="col-span-full">
      <div class="box-default">
        <%= turbo_frame_tag :consumer_index_chart, src: consumer_index_chart_path, loading: :lazy do %>
          Loading...
        <% end %>
      </div>
    </div>
  </div>
<% end %>
